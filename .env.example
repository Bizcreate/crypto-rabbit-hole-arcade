# Crypto Rabbit Hole Arcade - Environment Variables
# Copy this file to .env.local and fill in the values

# ============================================
# REQUIRED VARIABLES
# ============================================

# Thirdweb Configuration
# Get your client ID from https://thirdweb.com/dashboard
NEXT_PUBLIC_THIRDWEB_CLIENT_ID=your_thirdweb_client_id_here

# Thirdweb Secret Key (server-side only, do not expose to client)
# Get from https://thirdweb.com/dashboard
THIRDWEB_SECRET_KEY=your_thirdweb_secret_key_here

# ApeChain OFT Bridge Address
NEXT_PUBLIC_APE_OFT_ADDRESS=

# Otherside App ID
NEXT_PUBLIC_OTHERSIDE_APP_ID=

# zkVerify API Key (required for zero-knowledge proof verification)
# Get from your zkVerify provider
NEXT_PUBLIC_ZKVERIFY_API_KEY=your_zkverify_api_key_here

# ============================================
# OPTIONAL VARIABLES (with defaults)
# ============================================

# Mock Mode - Set to "true" to enable mock mode for development
NEXT_PUBLIC_MOCK_MODE=false

# Pyth Entropy Address (default: 0x98046Bd286715D3B0BC227Dd7a956b83D8978603)
NEXT_PUBLIC_PYTH_ENTROPY_ADDRESS=0x98046Bd286715D3B0BC227Dd7a956b83D8978603

# LayerZero Source Endpoint ID (default: 30168)
NEXT_PUBLIC_LZ_SRC_EID=30168

# LayerZero Destination Endpoint ID (default: 30102)
NEXT_PUBLIC_LZ_DST_EID=30102

# ApeCoin Token Address (default: 0x4d224452801ACEd8B2F0aebE155379bb5D594381)
NEXT_PUBLIC_APE_ADDRESS=0x4d224452801ACEd8B2F0aebE155379bb5D594381

# Enable zkVerify (set to "false" to disable, defaults to enabled if API key is present)
NEXT_PUBLIC_USE_ZKVERIFY=true
